rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Media assets and PDFs
    match /{allPaths=**} {
      // Allow public read for all newspaper images and PDFs
      allow read: if true;
      
      // Restrict write access to authenticated staff (Admins/Reporters)
      allow write: if request.auth != null;
    }
  }
}
