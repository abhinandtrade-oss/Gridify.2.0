rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Check if the logged-in user is an admin
    function isAdmin() {
      return request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.token.email)).data.role == 'admin';
    }

    // Users Collection
    match /users/{userId} {
      // Allow PUBLIC READ specifically to allow the setup script to check for existence
      allow read: if true; 
      
      // Allow creation of first user OR by an existing admin
      allow create: if request.auth != null; 
      allow update, delete: if isAdmin();
    }
    
    // Newspaper Editions
    match /newspapers/{id} {
      // Public can read published editions. Admins/Reporters can read all.
      allow read: if resource.data.status == 'published' || request.auth != null;
      // Admins/Reporters can write
      allow write: if request.auth != null;
    }
    
    // Newspaper Pages
    match /pages/{id} {
      // Public read so viewer works. Write restricted to staff.
      allow read: if true; 
      allow write: if request.auth != null;
    }
    
    // Publisher/Board Profiles
    match /profiles/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Settings Collection
    match /settings/{id} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}
